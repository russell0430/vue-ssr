{
  "name": "vue-ssr",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "node ./webpack/createServerConfig.js",
    "dev": "cross-env NODE_ENV=development rimraf dist && node ./server/dev-server.js",
    "serve": "cross-env NODE_ENV=production node ./server/prod-server.js --mode production",
    "build": "cross-env npm run clean && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack/webpack.client.js --progress --hide-modules --mode production",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack/webpack.server.js --progress --hide-modules --mode production",
    "clean": "rimraf dist",
    "server": "cross-env npm run build &&npm run serve"
  },
  "dependencies": {
